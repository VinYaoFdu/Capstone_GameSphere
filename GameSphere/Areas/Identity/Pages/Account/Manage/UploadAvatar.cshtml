@page
@model GameSphere.Areas.Identity.Pages.Account.Manage.UploadAvatarModel
@{
    ViewData["Title"] = "Upload Avatar";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Avatar">Avatar</label>
                <input asp-for="Input.Avatar" type="file" class="form-control-file" accept=".jpg, .jpeg, .png" />
                <span asp-validation-for="Input.Avatar" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
</div>
