@model IEnumerable<GameSphere.Models.Post>

@{
    ViewData["Title"] = "Member";
}

<div class="text-center">
    <h2 class="mb-4">Member Page</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="bg-secondary text-white">
                <th>
                    @Html.DisplayNameFor(model => model.Topic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MessaAt)
                </th>
                @*<th>&nbsp;</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Topic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MessaAt)
                    </td>
                    @*<td style="text-align:left;">
                        &nbsp;  <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.Id">Details</a>
                        @if (item.PostedBy == User.Identity?.Name)
                        {
                            <a asp-action="Edit" class="btn btn-outline-third" asp-route-id="@item.Id">Edit</a>
                        }
                        @if (item.PostedBy == User.Identity?.Name || User.IsInRole("admin"))
                        {
                            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                        }
                </td>*@
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5">No posts found.</td>
                </tr>
            }
        </tbody>
    </table>
    <p style="text-align:right;">
        <a asp-action="Create" class="btn btn-outline-third"style="text-decoration: none; padding: 5px; border-radius: 5px;">
            Post a new Message
        </a>
    </p>

</div>