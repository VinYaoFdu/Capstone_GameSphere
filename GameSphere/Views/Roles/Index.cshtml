@*-------------------Add manage Roles--------------------*@

@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="text-center" style="margin-bottom: 24px;">

    <h3 class="btn btn-primary" style="font-size:24px; margin-bottom: 20px;">
        All Registered Roles
    </h3>
</div>
@*<h2 style="text-align:center;">All Registered Roles</h2>*@

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th><p>Role ID</p></th>
            <th><p>Name</p></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-outline-third" asp-route-id="@item.Id">Edit</a>
                        @*<a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.Id">Details</a>*@
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<p style="text-align:right;">
    <a asp-action="Create" class="btn btn-outline-third" style="text-decoration: none; padding: 5px; border-radius: 5px;">
        Create a New Role
    </a>
</p>

<style>
    .custom-link {
        display: inline-block;
        padding: 4px;
        text-decoration: none;
        font-weight: bold;
    }

    .edit-link {
        color: blue;
        border: 2px solid blue;
        margin-right: 4px;
    }

    .details-link {
        color: green;
        border: 2px solid green;
        margin-right: 4px;
    }

    .delete-link {
        color: red;
        border: 2px solid red;
        margin-right: 4px;
    }
</style>
